<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_tag url_for(action: 'create'), method: "post" do %>
      	<br />
        <div class="form-group">
        	<%= label_tag 'Title' %><br />
          <%= text_field_tag 'title',"", class: "form-control"%>
        </div>
        <div class="form-group">
          <%= label_tag 'Start date' %><br />
          <%= date_field_tag 'start_date', Date.today , class: "form-control"%>
        </div>
        <div class="form-group">
        	<%= label_tag 'Duration (min)' %><br />
          <%= number_field_tag 'duration', "", min: 5, max: 120, step:5, class: "form-control" %> 
        </div>    
        <div class="form-group">
          <%= label_tag 'Description' %><br />
          <%= text_field_tag 'description', "", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag 'Price' %><br />
          <%= number_field_tag 'price', "", min: 1, max: 1000, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= label_tag 'Location' %><br />
          <%= text_field_tag 'location',"", class: "form-control"%>
        </div>
        <br /> <br />
        <%= submit_tag "share it", class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
